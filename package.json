{
  "name": "@yestarz/claude-code-switch",
  "version": "2.7.0",
  "description": "Claude Code 配置管理工具 - 管理多个配置文件和项目，支持Web UI配置和快速启动",
  "main": "dist/index.js",
  "bin": {
    "ccs": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').mkdirSync('dist/ui', { recursive: true }); require('fs').copyFileSync('src/ui/index.html', 'dist/ui/index.html');\"",
    "dev": "ts-node src/cli.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "config",
    "settings",
    "profile",
    "manager",
    "project",
    "workspace",
    "switch",
    "ui"
  ],
  "author": "yestarz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yestarz/claude-code-switch.git"
  },
  "bugs": {
    "url": "https://github.com/yestarz/claude-code-switch/issues"
  },
  "homepage": "https://github.com/yestarz/claude-code-switch#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "open": "^10.0.3",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
